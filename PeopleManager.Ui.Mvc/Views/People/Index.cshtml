@model IList<Person>

<div class="container">
    @if (Model.Any())
    {
        <h2 class="mb-4">Employee of the Month</h2>
        <div class="row mb-5">
            <div class="col-12 col-md-6 col-lg-3">
                <partial name="_PersonCard" model="Model.First()" />
            </div>
        </div>
    }

    <h1>List of People</h1>

    <div class="table-responsive">
        <table class="table table-dark table-striped">
            <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var person in Model)
            {
                <partial name="PersonRowPartial" model="person" />
            }
            </tbody>
        </table>
    </div>

    <h2 class="mt-5 mb-4">People Cards</h2>
    <div class="row">
        @foreach (var person in Model)
        {
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <partial name="_PersonCard" model="person" />
            </div>
        }
    </div>
</div>